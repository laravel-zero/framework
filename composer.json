{
    "name": "nunomaduro/zero-framework",
    "description": "Laravel Zero provides the perfect starting point for your next Laravel Console Application.",
    "keywords": [
        "Nuno Maduro",
        "NunoMaduro",
        "Laravel Zero",
        "Zero",
        "Laravel",
        "Console",
        "Cli",
        "Commands"
    ],
    "homepage": "https://github.com/nunomaduro/zero-framework",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/nunomaduro/zero-framework/issues",
        "source": "https://github.com/nunomaduro/zero-framework"
    },
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "illuminate/config": "5.4.*",
        "illuminate/console": "5.4.*",
        "illuminate/container": "5.4.*",
        "illuminate/events": "5.4.*",
        "nunomaduro/laravel-desktop-notifier": "1.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "NunoMaduro\\ZeroFramework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NunoMaduro\\ZeroFramework\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}
